<div class="uk-vertical-align uk-text-center uk-height-1-1">
  <div class="uk-vertical-align-middle" style="width: 250px;">
    <i class="uk-icon-tv uk-icon-very-large login-icon"></i>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name),
      class: "uk-panel uk-panel-box uk-form") do |f| %>
      <div class="uk-form-row">
        <%= f.text_field :login, class: "uk-width-1-1 uk-form-large",
          placeholder: t('user.attributes.login') %>
      </div>

      <div class="uk-form-row">
        <%= f.password_field :password, class: "uk-width-1-1 uk-form-large",
          placeholder: t('user.attributes.password') %>
      </div>

      <div class="uk-form-row">
        <%= f.submit t('devise.links.sign_in'),
          class: "uk-width-1-1 uk-button uk-button-primary uk-button-large" %>
      </div>

      <div class="uk-form-row uk-text-small">
        <%= f.check_box :remember_me, class: "uk-float-left" %>
        <%= f.label t('user.attributes.remember_me'), class: "uk-float-left" %>
        <%= link_to t('devise.links.forgot_password'), new_password_path(resource_name),
            class: "uk-float-right uk-link uk-link-muted" %>
      </div>
    <% end %>
  </div>
</div>
